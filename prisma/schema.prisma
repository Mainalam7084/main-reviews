model Review {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Movie snapshot data
  movieKey    String // TMDB ID or OMDb ID
  movieSource String // "tmdb" or "omdb"
  title       String
  year        String?
  poster      String?
  genres      String // Store arrays as string (JSON) in SQLite
  runtime     String?
  director    String?
  actors      String // Store arrays as string (JSON) in SQLite
  overview    String?

  // Review data
  ratingStars Int // 1-5
  verdict     String // Store as string
  prosText    String?
  consText    String?
  reviewText  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([movieKey])
}
